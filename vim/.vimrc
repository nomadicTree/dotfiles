let mapleader=" "
set number

set showmatch
set title
set showcmd
set cursorline
set history=1000
set undolevels=1000

" Searching
set ignorecase
set smartcase
set hlsearch
set incsearch
nmap <leader><space> :nohlsearch<CR>

" Indentation
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4

set autoindent
